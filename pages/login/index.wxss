.form {
  margin-top: 160rpx;
}

.input {
  height: 80rpx;
  border-bottom: 2rpx solid #757575;
  margin-bottom: 36rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

input {
  /* background-color: blue; */
