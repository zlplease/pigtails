  color: #757575;
}

.login {
  width: 80%;
  height: 96rpx;
  /* background-color: #74CC98; */
  background-image: linear-gradient(to right, #74CC98 ,#8CBBFF);
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 36rpx;
  border-radius: 32rpx;
  font-weight: bold;
}

.block1 {
  width: 200rpx;
  height: 200rpx;
  background-color: rgb(138, 188, 249, 0.6);
  position: absolute;
  left: 0;
  top: 0;
  border-radius:0 0 160rpx 0;
}

.block2 {
  width: 448rpx;
  height: 448rpx;
  z-index: -1;
  bottom: 0;
  right: 0;
  position: absolute;
  background-color: rgb(233, 246, 238, 0.75);
  border-radius: 400rpx 0 0 0;
}