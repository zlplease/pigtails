.total {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  min-height: 100%;
  background-image: url("https://img.zcool.cn/community/01209a5d4247c8a8012187f48ae6e8.jpg@1280w_1l_2o_100sh.jpg");
  background-size: 100% 100%;
  justify-content: center;
  align-items: center;
}

.content {
  width: 90%;
  height: 80%;
}

.getBack {
  width: 120rpx;
  height: 64rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(192, 204, 184, 0.2);
  border-radius: 20rpx;
  border: 2rpx solid white;
}

.op {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 140rpx;
}

.isPublic {
  display: flex;
}

.btn {
  width: 50%;
  height: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.flag {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 320rpx;
  left: 240rpx;
}

.public {
  left: 424rpx;
}

.btn1 {
  border-right: 6rpx solid #fffeee;
}

.isPublic, .startGame, .createRoom, .uuid {
  width: 360rpx;
  height: 108rpx;
  border-radius: 48rpx;
  background: linear-gradient(145deg, #FF7B47, #FF6347);
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 42rpx;
  font-weight: bold;
  margin: 40rpx 0;
}

.uuid {
  width: 360rpx;
  height: 200rpx;
  border-radius: 32rpx;
  flex-direction: column;
}

.uuid input {
  width: 300rpx;
  height: 64rpx;
  color: #cdcdcd;
  font-size: 24rpx;
  border-radius: 24rpx;
  padding:0 8rpx;
  background-color: white;
}