.total {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  min-height: 100%;
  background-image: url("https://img.zcool.cn/community/01eb515d4247c1a8012187f486ea54.jpg@1280w_1l_0o_100sh.jpg");
  background-size: 100% 100%;
  justify-content: center;
  align-items: center;
}

.content {
  width: 80%;
  height: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
}

.rooms {
  width: 100%;
  height: 80%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.room {
  width: 40%;
  height: 320rpx;
  background-color: white;
  margin: 20rpx 5%;
  border-radius: 16rpx;
  box-shadow:  10rpx 10rpx 2rpx #bebebe,
             -10rpx -10rpx 2rpx #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.btns {
  display: flex;
  justify-content: center;
  width: 100%;
}

.avoid {
  background: #cdcdcd !important;
}

.btn {
  width: 36%;
  height: 80rpx;
  background: linear-gradient(to right, #74CC98 ,#8CBBFF);
  margin: 0 20rpx ;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
  color: white;
  font-weight: bold;
  font-size: 32rpx;
}

.nowPage {
  height: 80rpx;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.room image {
  width: 100%;
  height: 200rpx;
}

.joinGame {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 64rpx;
  border-radius: 18rpx;
  background: linear-gradient(145deg, #FF7B47, #FF6347);
  color: white;
  font-weight: bold;
  font-size: 24rpx;
}

.player {
  font-weight: 600;
}